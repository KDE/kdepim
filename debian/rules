DEB_DH_MAKESHLIBS_ARGS_libmimelib1 := -V'libmimelib1 (>= $(shlibs_ver))'
DEB_DH_MAKESHLIBS_ARGS_kaddressbook := -V
DEB_DH_MAKESHLIBS_ARGS_kalarm := -V
DEB_DH_MAKESHLIBS_ARGS_kdepim-wizards := -V
