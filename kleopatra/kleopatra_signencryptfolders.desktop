[Desktop Entry]
Type=Service
Encoding=UTF-8
X-KDE-ServiceTypes=inode/directory,KonqPopupMenu/Plugin
Actions=kleosignencryptfolder;kleoencryptfolder;
Name=Kleopatra Sign/Encrypt Folders

[Desktop Action kleosignencryptfolder]
Name=Archive, Sign & Encrypt Folder
Icon=kleopatra
Exec=kleopatra --sign-encrypt %F

[Desktop Action kleoencryptfolder]
Name=Archive & Encrypt Folder
Icon=kleopatra
Exec=kleopatra --encrypt %F
