prefix=@prefix@
exec_prefix=@exec_prefix@
includedir=@includedir@
libdir=@libdir@

output=""

usage()
{
    cat <<EOF
Usage: gpg-error-config [OPTIONS]
Options:
	[--prefix]
	[--exec-prefix]
	[--version]
	[--libs]
	[--cflags]
EOF
    exit $1
}

if test $# -eq 0; then
    usage 1 1>&2
fi

while test $# -gt 0; do
    case "$1" in
	-*=*)
	    optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'`
	    ;;
	*)
	    optarg=
	    ;;
    esac

    case $1 in
        --prefix)
	    output="$output $prefix"
	    ;;
        --exec-prefix)
	    output="$output $exec_prefix"
	    ;;
        --version)
            echo "@VERSION@"
	    exit 0
	    ;;
        --cflags)
            output="$output -I$includedir"
	    ;;
	--libs)
            output="$output -L$libdir -lgpg-error"
	    ;;
	*)
            usage 1 1>&2
	    ;;
    esac
    shift
done

echo $output
