kontact_available=no
KDE_CHECK_HEADER(kontact/core.h,
[
  kontact_available=yes
],
[])

AM_CONDITIONAL(include_kontact, test "$kontact_available" = "yes")

konq_available=no
KDE_CHECK_HEADER(konq_popupmenu.h,
[
  konq_available=yes
],
[])

AM_CONDITIONAL(include_konqplugin, test "$konq_available" = "yes")

AC_FIND_FILE(libkdepim/part.h, $kde_includes, ac_kpimpart_includes)

if test "$ac_kpimpart_includes" != "NO" ; then
	HAVE_KPIMPARTCHECK=1
	AC_DEFINE(HAVE_KPIMPART, test -n "$ac_kpimpart_includes", [Defines if libkdepim/part.h is available])
fi

if test -n "$HAVE_KPIMPARTCHECK" ; then
	LIB_KDEPIM=-lkdepim
else
	LIB_KDEPIM=	
fi
