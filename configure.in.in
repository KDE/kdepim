#MIN_CONFIG
AC_HEADER_DIRENT
AC_HEADER_STDC
AC_CHECK_HEADERS(fcntl.h sys/sysctl.h sys/param.h sys/time.h sys/types.h unistd.h)

AC_CONFIG_SUBDIRS(libical)
KDE_NEED_FLEX

dnl build with exchange support
ac_use_exchange="no"
AC_ARG_ENABLE(exchange,
        [  --enable-exchange       enable exchange plugin for korganizer [default=disable]], ac_use_exchange=$enableval, ac_use_exchange=no)
AM_CONDITIONAL(include_exchange_SUBDIR, test "$ac_use_exchange" = "yes")

if test "x$ac_use_exchange" != "xyes"; then
	DO_NOT_COMPILE="$DO_NOT_COMPILE libkpimexchange"
fi
