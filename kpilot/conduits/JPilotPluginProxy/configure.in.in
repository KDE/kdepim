			CPPFLAGS="$kpilot_save_cflags  $all_includes $GTK_INCLUDE"
			LDFLAGS="$kpilot_save_ldflags  $all_libraries -L$i -R$i"

			unset ac_cv_lib_gtk_gtk_main
			AC_CHECK_LIB(gtk, gtk_main,
				[GTK_LIB="-L$i -R$i -lgtk"
				HAVE_GTK=1],[],[])
		fi
	done
fi

if test "$HAVE_GTK" = "0" ; then
