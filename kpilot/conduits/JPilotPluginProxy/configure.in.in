if test "$HAVE_GTK" = "1" ; then
	AC_CHECK_LIB(gtk, gtk_main,
			[GLIB_LIB="-lgtk"
			HAVE_GTK=1],[],[])

	for i in /usr/local/glib /usr/local/lib /usr/lib /vol/kde/support/lib ; do
